generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  nama     String    @unique
  username String    @unique
  password String
  email    String    @unique
  role     Role
  Makanan  Makanan[]

  Menu Menu[]

  Pasien          Pasien[] @relation("CreatedByUser")
  validatedByUser Pasien[] @relation("ValidatedByUser")
}

model Pasien {
  mr        String    @id
  namaPasien      String
  tempatTidur     String
  diagnosa        String
  status          Status
  validate        Boolean     @default(false)
  link            String?
  created_at      DateTime    @default(now())
  updated_at      DateTime    @updatedAt
  createdBy       Int
  validatedBy     Int?
  user            User        @relation("CreatedByUser", fields: [createdBy], references: [id])
  validatedByUser User?       @relation("ValidatedByUser", fields: [validatedBy], references: [id])
  Pantangan       Pantangan[]
  Pesanan         Pesanan[]
}

model Makanan {
  id          Int         @id @default(autoincrement())
  namaMakanan String
  jenis       Jenis
  created_at  DateTime    @default(now())
  updated_at  DateTime    @updatedAt
  menuId      Int
  createdBy   Int
  user        User        @relation(fields: [createdBy], references: [id])
  menu        Menu        @relation(fields: [menuId], references: [id])
  Pantangan   Pantangan[]
  Pesanan     Pesanan[]
}

model Menu {
  id         Int      @id @default(autoincrement())
  namaMenu   String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  createdBy  Int
  user       User     @relation(fields: [createdBy], references: [id])

  Makanan Makanan[]
}

model Pantangan {
  id         Int      @id @default(autoincrement())
  nama       String
  pasienMR   String
  makananId  Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  makanan Makanan @relation(fields: [makananId], references: [id])
  pasien  Pasien  @relation(fields: [pasienMR], references: [mr])
}

model Pesanan {
  id         Int      @id @default(autoincrement())
  pasienMR   String
  makananId  Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  pasien  Pasien  @relation(fields: [pasienMR], references: [mr])
  makanan Makanan @relation(fields: [makananId], references: [id])
}

enum Jenis {
  Lauk
  Sayur
  Karbohidrat
  Buah
  Snack
  Minuman
}

enum Role {
  NURSE
  KITCHEN
  ADMIN
  DIETISIEN
}

enum Status {
  ACTIVE
  INACTIVE
  PENDING
}
